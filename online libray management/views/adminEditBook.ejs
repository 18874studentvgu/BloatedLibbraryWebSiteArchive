<!DOCTYPE html>
<html lang="english">
    <%- include('layouts/header'); -%>
    <body>
        <div>
            <link href="/css/admin-add-book.css" rel="stylesheet" />
            <div class="add-book-container">
                <div class="add-book-header">
                    <%- include('layouts/navbar'); -%>
                    <%- include('layouts/adminheader'); -%>
                </div>
                <div class="add-book-container2">
                    <div class="add-book-login">
                        <div class="add-book-background">
                            <h1 class="add-book-text06">Edit book</h1>
                            <form action="/admin/storeEditBook/<%= detailedBook._id %>" method="POST" class="add-book-form">
                                <div class="add-book-book-name">
                                    <label for="name" class="add-book-text07">Book name</label>
                                    <input
                                        type="text"
                                        id="title"
                                        name="title"
                                        class="add-book-textinput input"
                                        value= "<%= detailedBook.title %>"
                                    />
                                </div>
                                <div class="add-book-author">
                                    <label for="author" class="add-book-text08">
                                    Author (separated by commas)
                                    </label>
                                    <input
                                        type="text"
                                        id="author"
                                        name="author"
                                        class="add-book-textinput1 input"
                                        value= "<%= detailedBook.author %>"
                                    />
                                </div>
                                <div class="add-book-author1">
                                    <label for="internationalNumber" class="add-book-text09">
                                    ISBN
                                    </label>
                                    <input
                                        type="text"
                                        id="internationalNumber"
                                        name="internationalNumber"
                                        class="add-book-textinput2 input"
                                        value= "<%= detailedBook.internationalNumber %>"
                                    />
                                </div>
                                <div class="add-book-author">
                                    <label for="author" class="add-book-text08">
                                        Synopsis
                                    </label>
                                    <input
                                        type="text"
                                        id="synopsis"
                                        name="synopsis"
                                        class="add-book-textinput1 input"
                                        value= "<%= detailedBook.synopsis %>"
                                    />
                                </div>
                                <div class="add-book-author">
                                    <label for="author" class="add-book-text08">
                                        PDFPreviewLink
                                    </label>
                                    <input
                                        type="text"
                                        id="PDFPreviewLink"
                                        name="PDFPreviewLink"
                                        class="add-book-textinput1 input"
                                        value= "<%= detailedBook.PDFPreviewLink %>"
                                    />
                                </div>
                                <div class="add-book-quantity">
                                    <label for="copiesAvailable" class="add-book-text12">No. of books</label>
                                    <input
                                        type="text"
                                        id="copiesAvailable"
                                        name="copiesAvailable"
                                        class="add-book-textinput5 input"
                                        value= "<%= detailedBook.copiesAvailable %>"
                                    />
                                </div>
                                <button type='submit' class="add-book-login1 button">Submit</button>
                            </form>
                        </div>
                    </div>
                </div>
                <%- include('layouts/footer'); -%>
            </div>
        </div>
    </body>
</html>
