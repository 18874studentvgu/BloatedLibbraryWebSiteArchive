<!DOCTYPE html>
<html lang="english">
  <%- include('layouts/header'); -%>
  <body>
    <div>
      <link href="/css/admin.css" rel="stylesheet" />
      <div class="admin-container">
        <div class="admin-container01">
          <nav id="MainNav" class="admin-nav-bar">
            <div class="admin-container02">
              <a href="/index" class="admin-navlink">
                <img
                  alt="VGULogo11954"
                  src="playground_assets/vgulogo11954-887-200h.png"
                  class="admin-vg-logo1"
                />
              </a>
              <div class="admin-navbutton">
                <a href="/index" class="admin-navlink1">
                  <h2 class="admin-text">
                    <span>Home</span>
                    <span></span>
                  </h2>
                </a>
                <a href="/contact" class="admin-navlink2">
                  <h2 class="admin-text003"><span>Contact</span></h2>
                </a>
                <a href="/about" class="admin-navlink3">
                  <h2 class="admin-text005">About</h2>
                </a>
              </div>
              <a href="search-filter-book.html" class="admin-navlink4">
                <img
                  alt="magnifyingglass11955"
                  src="playground_assets/magnifyingglass11955-xoij-200h.png"
                  class="admin-magnifyingglass1"
                />
              </a>
              <a href="/login" class="admin-navlink5 button">
                Hi, User name
              </a>
            </div>
          </nav>
          <div class="adminheader-adminheader adminheader-root-class-name3">
            <div class="adminheader-adminheader1">
              <a href="/adminDashboard" class="adminheader-navlink">
                <div class="adminheader-dashboardadminbutton button">
                  <img
                    alt="Rectangle492645"
                    src="playground_assets/rectangle492645-thch-200h.png"
                    class="adminheader-rectangle49"
                  />
                  <span class="adminheader-text"><span>Dashboard</span></span>
                </div>
              </a>
              <a href="/adminUsersList" class="adminheader-navlink1">
                <div class="adminheader-useradminbutton button">
                  <img
                    alt="Rectangle492651"
                    src="playground_assets/rectangle492651-sxib-200h.png"
                    class="adminheader-rectangle491"
                  />
                  <span class="adminheader-text2"><span>User</span></span>
                </div>
              </a>
              <a href="/adminBooksList" class="adminheader-navlink2">
                <div class="adminheader-bookadminbutton button">
                  <img
                    alt="Rectangle492661"
                    src="playground_assets/rectangle492661-4kxr-200h.png"
                    class="adminheader-rectangle492"
                  />
                  <span class="adminheader-text4"><span>Book</span></span>
                </div>
              </a>
            </div>
          </div>
        </div>
        <div class="admin-number-tab">
          <div class="admin-totalusers">
            <img
              alt="group12002"
              src="playground_assets/group12002-dmcza-200h.png"
              class="admin-group1"
            />
            <div class="admin-container03">
              <span class="admin-text006"><span>Total users</span></span>
              <span class="admin-text008"><span><%= usersList.length %></span></span>
            </div>
          </div>
          <div class="admin-totalbooks">
            <img
              alt="image"
              src="playground_assets/book11982-qbxi-200h.png"
              class="admin-image"
            />
            <div class="admin-container04">
              <span class="admin-text010">Total books</span>
              <span class="admin-text011"><span><%= booksList.length %></span></span>
            </div>
          </div>
          <div class="admin-issued">
            <img
              alt="image"
              src="playground_assets/library12002-d87n-200h.png"
              class="admin-image1"
            />
            <div class="admin-container05">
              <span class="admin-text013">Issued</span>
              <span class="admin-text014"><span>12,345,678</span></span>
            </div>
          </div>
        </div>
        <div class="admin-admindashboard">
          <div class="admin--bchartscolumn-chats">
            <canvas style = "position:absolute" id="myBarChart" width="100px" height="50px"></canvas>
            <!-- <span class="admin-text041"><span>Reports</span></span> -->
          </div>
          <div class="admin-container06">
            <div class="admin-lastactivetable">
              <div class="admin-container07">
                <div class="admin-container08">
                  <span class="admin-active-user-title">Last active users</span>
                  <table cellpadding = "7">
                    <thead>
                      <tr>
                        <th class="admin-text043">PFP</th>
                        <th class="admin-text043">Fullname</th>
                        <th class="admin-text043">Username</th>  
                        <th class="admin-text043">ID</th>
                        <th class="admin-text043">Active</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% for (var i = 0; i < 5; i++) { %>
                      <tr>
                        <td>
                          <img
                          alt="user112914"
                          src="/playground_assets/user112914-a5a-200h.png"
                          class="admin-user11"
                          />
                        </td>
                        <td class="admin-text052"><%= usersList[i].fullName %></td>
                        <td class="admin-text053"><%= usersList[i].userName %></td>
                        <td class="admin-text054">17565</td>
                        <td class="admin-text055">45 sec. ago</td>
                      </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
              <a
                href="/adminUsersList"
                id="viewAllUser"
                class="admin-view-all-button button"
              >
                View all
              </a>
            </div>
            <div class="admin-newbooktable">
              <div class="admin-container09">
                <span class="admin-new-book-title">New books</span>
                <table cellpadding = "3">
                  <thead>
                    <tr>
                      <th class="admin-text043" style="width: 30%">Title</th>
                      <th class="admin-text043">ID</th>  
                      <th class="admin-text043">Author</th>
                      <th class="admin-text043">Published Date</th>
                      <th class="admin-text043">Uploaded Date</th>
                      <th class="admin-text043">Quantity</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for (var i = 0; i < 5; i++) { %>
                    <tr>
                      <td class="admin-text092"><%= booksList[i].Title %></td>
                      <td class="admin-text093">17657</span>
                      <td class="admin-text094"><%= booksList[i].Author %></td>
                      <td class="admin-text095"><%= booksList[i].publishedDate %></td>
                      <td class="admin-text096"><%= booksList[i].uploadedDate.toDateString() %></td>
                      <td class="admin-text097"><%= booksList[i].Quantity %></td>
                    </tr>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <a
                href="/adminBooksList"
                id="viewAllBook"
                class="admin-view-all-book-button button"
              >
                View all
              </a>
            </div>
          </div>
        </div>
        <!--footer-->
        <%- include('layouts/footer'); -%>
      </div>
    </div>
  </body>
  <!--Script-->
  <%- include('layouts/script'); -%>
  <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
  <script type="module" src="js/graph.js"></script>
</html>
